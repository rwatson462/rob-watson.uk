---
import {getEntry} from "astro:content";
import BasePage from "../layouts/BasePage.astro";
import FormattedDate from "../components/FormattedDate.astro";

const {data, ...entry} = await getEntry('content', 'history')
const { Content } = await entry.render();
---

<BasePage
	title={data.title}
	description={data.description}
>
	<article>
		<img width={1020} height={510} src={data.heroImage} alt={data.title} class="shadow rounded-lg"/>
		<div class="prose pt-8">
			<div class="title">
				<div class="date">
					<FormattedDate date={data.updatedDate ?? data.pubDate}/>
				</div>
				<h1>{data.title}</h1>
				<hr/>
			</div>
			<Content/>
		</div>
	</article>
</BasePage>
